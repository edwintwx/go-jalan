<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "GoJalan - Get a life!",
  "short_name": "GoJalan",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "icons/android-icon-192x192.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#FBBA33",
  "background_color": "#623963",
  "display": "fullscreen",
  "orientation": "portrait"
}
