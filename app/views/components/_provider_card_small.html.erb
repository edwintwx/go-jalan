<div class="provider-card-small d-flex justify-content-between bg-white border-bottom w-100 ml-2 mr-2 pb-2">
  <div class="provider-image">
    <% if current_user.favourites.find_by(provider: fav.provider).nil? %>
      <%= link_to provider_favourites_path(fav.provider), method: :post do %>
        <i class="far fa-heart"></i>
      <% end %>
    <% else %>
      <%= link_to favourite_path(fav.provider), method: :delete do %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% end %>
    <%= image_tag "banner.jpg", width: 100, height: 100 %>
  </div>
  <div class="provider-info flex-grow-1 ml-2">
    <p><small><%= fav.provider.categories.first.name %></small></p>
    <h6><%= fav.provider.name %></h6>
    <p><%= fav.provider.description %></p>
    <% tags = fav.provider.tags.map do |tag| %>
      <% tag.name %>
    <% end %>
    <p><small><%= tags.join(", ") %></small></p>
  </div>
  <div class="provide-more d-flex flex-column align-items-end ml-2 mr-2">
    <div class="provider-rating mb-auto">
      <p class="text-left p-0"><i class="fas fa-star"></i> <%= fav.provider.avg_rating %></p>
    </div>
    <div class="provider-price text-left pr-2">
      <%= fav.provider.price %>
    </div>
  </div>
</div>
