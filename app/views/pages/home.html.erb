<h1>Pages#home</h1>
<p><%= link_to "All Providers", providers_path %></p>
<p><%= link_to "All Reviews", reviews_path %></p>
<p><%= link_to "Add Review", new_review_path %></p>
<% if current_user.nil? %>
  <p><%= link_to "Me", new_user_session_path %></p>
<% else %>
  <p><%= link_to "Me", user_path(current_user) %></p>
<% end %>

<%= form_tag providers_path, method: :get, class: "d-flex mx-auto justify-content-center" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for a provider"    %>
    <%= submit_tag "Search", class: "btn btn-primary ml-3" %>
<% end %>

<br>

<%= form_tag reviews_path, method: :get, class: "d-flex mx-auto justify-content-center" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for a review"    %>
    <%= submit_tag "Search", class: "btn btn-primary ml-3" %>
<% end %>

<!-- Using list method - decide which works better with the swipe js -->
<div class="row">
  <ul class="list-inline">
    <% Category.all.each do |category| %>
      <li class="list-inline-item">
        <%= render "components/category_card", category: category %>
      </li>
    <% end %>
  </ul>
</div>

<!-- Using div method - decide which works better with the swipe js -->
<div class="row">
  <% Category.all.each do |category| %>
    <div class="col-3">
      <%= render "components/category_card", category: category %>
    </div>
  <% end %>
</div>
