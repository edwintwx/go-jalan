<%= form_tag results_path, method: :get, class: "d-flex mx-auto search-section" do %>
<i class="fas fa-arrow-left arrow-icon"></i>
	<%= text_field_tag :query,
	params[:query],
	class: "form-control",
	placeholder: "Find something to do... "    %>
	<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<!-- Review and Provider tabs -->
<ul class="nav nav-pills mb-3 filter-tabs" id="pills-tab" role="tablist">
	<li class="nav-item search-tab">
		<a class="nav-link filter-tab-link active" id="pills-reviews-tab" data-toggle="pill" href="#pills-reviews" role="tab" aria-controls="pills-reviews" aria-selected="true">Reviews</a>
	</li>
	<li class="nav-item search-tab">
		<a class="nav-link filter-tab-link" id="pills-providers-tab" data-toggle="pill" href="#pills-providers" role="tab" aria-controls="pills-providers" aria-selected="false">Providers</a>
	</li>
</ul>


<!-- Review and Provider content -->
<div class="tab-content" id="pills-tabContent">
	<div class="tab-pane fade show active" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
		<h2>Reviews corresponding to search</h2>
      <% if @reviews.length == Review.all.length %>
      <h3>Your search did not correspond to any reviews. All reviews:</h3>
      <% end %>
      <% @reviews.each do |review| %>
      <%= render "shared/review", review: review %>
      <p>-----------------------------------------------------------</p>
      <% end %>
	</div>
	<div class="tab-panel fade" id="pills-providers" role="tabpanel" aria-labelledby="pills-providers-tab">
		<div class="providers-container">
      <div class="all-providers">

      <% @providers.each do |provider| %>      
         <%= render "components/provider_card_small", provider: provider %>
      <% end %>
      </div>
		</div>
	</div>
</div>

