<style>
  #review-form {
    position: absolute;
    padding: 1.5em;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 100;

  }
    .select2-container  {
      width: 100%;
    }
</style>

<div id="review-form" class="bg-white" style='display:none;'>
  <%= simple_form_for [Review.new] do |f| %>
    <div class="output_image">
      <img src="" id="output_image" style="width: 190px; height: 235px;" alt="">
    </div>
    <%= f.input :photo_url, label: 'Photo/Video' ,input_html: {value: '', multiple: "true"}, as: :file %>
    <%= f.input :content, label: 'Caption this' %>
    <%= f.association :provider, label: 'Tag restaurant', input_html: {class: 'beautiful-dropdown'} %>
    <%= f.input :rating, collection: 1..5, prompt: "Rating"  %>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>


