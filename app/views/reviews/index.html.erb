<h1>All Reviews</h1>
<% if @reviews.empty? %>
  <p>No reviews to show yet</p>
<% else %>
  <% @reviews.each do |review| %>
    <p><%= review.title %></p>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
    <p><%= review.user.first_name %></p>
    <p><%= review.provider.name unless review.provider.nil? %></p>
  <% end %>
<% end %>
