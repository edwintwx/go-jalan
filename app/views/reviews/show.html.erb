<% if @previous %>
  <%= link_to "previous", review_path(@previous) %>
<% end %>

<br>

<div class="d-flex m-0 p-0">
  <%= cl_image_tag(@review.user.avatar, class: "avatar-medium m-2") %>
  <div class="p-0 mt-2 ml-2 font-weight-bold">
    <p class="m-0 p-0"><%= @review.user.username %></p>
    <p class="m-0 p-0"><%= link_to @review.provider.name, provider_path(@review.provider) %></p>
  </div>
</div>

<% @review.review_photos.each do |photo| %>
 <% if photo.photo_url.resource_type == "video" %>
    <div class="video border">
      <%= cl_video_tag(photo.photo_url.file.public_id,
                :loop => true, :controls => true, :autoplay => true,
                :transformation => [width: 500, height: 600, crop: :fill],
                :fallback_content => "Your browser does not support HTML5 video tags." ) %>
    </div>
  <% else %>
    <%= cl_image_tag(photo.photo_url, width: 500, height: 6000, crop: :fill) %>
  <% end %>
<% end %>

<%= @review.content %>
<% if @review.likes.find_by(user: current_user).nil? %>
  <p><%= link_to "Like this review", review_likes_path(@review), method: :post %></p>
<% else %>
  <p><%= link_to "Unlike this review", like_path(@review), method: :delete %></p>
<% end %>

<br>

<% if @next %>
  <%= link_to "next", @next %>
<% end %>
