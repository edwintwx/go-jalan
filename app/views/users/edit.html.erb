<div class="edit-profile d-flex flex-column mt-3 mx-3">
  <div class="row">
    <div class="col">
      <h3>Edit your profile</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= simple_form_for [@user] do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :description %>
        <%= f.input :email %>
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Back", user_path(@user), class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>
